# Papercast Environment Variables Template
# Copy this file to .env and fill in your actual values

# News API Configuration
# Get your free key at https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# AWS Configuration
# Set to 'true' to use real AWS S3/Polly/DynamoDB/Cognito
USE_REAL_AWS=false

# AWS Credentials (Optional if using IAM roles on EC2 or local ~/.aws/credentials)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=us-east-1

# Specific AWS Resource Names
S3_BUCKET_NAME=your-audio-bucket-name
DYNAMODB_TABLE_NAME=PapercastCache
COGNITO_USER_POOL_ID=your_user_pool_id
COGNITO_CLIENT_ID=your_client_id
COGNITO_CLIENT_SECRET=your_client_secret_optional

# App Secret Key for session security
SECRET_KEY=generate_a_random_string_here
